{
  "name": "hearty-number-formatter",
  "version": "2.0.0",
  "description": "Beautiful number formatter with React + Tailwind CSS UI - Format numbers with multiple locales, currencies, and custom options",
  "type": "module",
  "main": "./src/utils/numberFormatter.js",
  "exports": {
    ".": "./src/utils/numberFormatter.js",
    "./utils": "./src/utils/numberFormatter.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "audit": "yarn audit --level moderate",
    "audit:fix": "yarn upgrade-interactive --latest",
    "security-check": "yarn audit && yarn test",
    "prebuild": "yarn security-check",
    "prepare": "node -e \"try { require('husky') } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrinivasNarayansetty/number-formatter.git"
  },
  "author": "Srinivas <srinivas69cse@gmail.com> (http://srinivasnarayansetty.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SrinivasNarayansetty/number-formatter/issues"
  },
  "homepage": "https://github.com/SrinivasNarayansetty/number-formatter#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/ui": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "resolutions": {
    "esbuild": "^0.25.0"
  },
  "keywords": [
    "hearty-helper",
    "hearty-number-formatter",
    "number-formatter",
    "react",
    "tailwindcss",
    "formatter",
    "currency",
    "locale",
    "internationalization",
    "i18n",
    "number-format",
    "format-number",
    "intl",
    "number-utility"
  ]
}
